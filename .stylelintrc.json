{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": 4,
        "selector-class-pattern": "^([a-z][a-z0-9]*)(_[a-z0-9]+)*$",
        "custom-property-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
        "scss/double-slash-comment-whitespace-inside": "never"
    }
}
